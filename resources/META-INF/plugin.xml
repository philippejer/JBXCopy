<idea-plugin version="1">
    <id>jpe.jb.JBXCopy</id>
    <name>JBXCopy</name>
    <version>1.0</version>

    <depends>com.intellij.modules.platform</depends>

    <actions>
        <action id="JBXCopy.Action" class="jpe.jb.XCopyPasteAction" text="Paste Selection"
                description="Inserts last selected text at cursor location">
            <mouse-shortcut keystroke="button2" keymap="$default"/>
        </action>
    </actions>

    <project-components>
        <component>
            <implementation-class>jpe.jb.XCopyPlugin</implementation-class>
        </component>
    </project-components>

</idea-plugin>